<h1><%=  t('index.listing_formalities_documents') %></h1>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to t('index.listing_formalities_documents'), formalities_documents_path %></li>
  <li><%= link_to t('index.new_formalities_document'), new_formalities_document_path %></li>
</ul>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= t('formalities_master') %></th>
      <th><%= t('requirements') %></th>
    </tr>
    </thead>

    <tbody>
    <% @formalities_documents.each do |formalities_document| %>
        <tr>
          <td><%= formalities_document.formalities_master.name %></td>
          <td><%= formalities_document.document.name %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group btn-group-xs">
                <%= link_to t('index.show'), formalities_document, class: 'btn btn-info list' %>
                <%= link_to t('index.edit'), edit_formalities_document_path(formalities_document), class: 'btn btn-primary list' %>
                <%= link_to t('index.destroy'), formalities_document, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger list' %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @formalities_documents %></br>
<%= page_entries_info @formalities_documents %>

<br><br>

<%= link_to new_formalities_document_path, class: 'btn btn-info btn-sm list' do %>
    <i class="glyphicon glyphicon-plus"></i> <%= t('index.new_formalities_document') %>
<% end %>
