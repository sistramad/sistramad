<div class="col-md-6">
  <br>
  <div class="panel panel-primary">
    <div 
      class="panel-heading">Acciones disponibles:
    </div>
    <div class="panel-body">
      <ul>
        <h4>
          <p> <li> <%= link_to "Consultar recaudos.", show_requirements_procedure_path(procedure: @procedure) %> </li> </p>
          
          <% @document = @procedure.documents.find_by(name: "Plan de Trabajo")%>
          <% step = @procedure.steps.find_by(name: "#2")%>
          
          <% if  @procedure.steps.find_by(name: "#1").approved?  %>
            <% if @document.nil?%>
              <p><li> <%= link_to "Cargar plan de trabajo.", new_document_path(name: 'Plan de Trabajo', code: 'PDT', procedure: @procedure, step: '#2' ) %> </li></p>
            <% elsif !step.approved? %>
              <p><li> <%= link_to "Editar plan de trabajo.", edit_document_path(@document) %> </li></p>
            <% end %>

            <% @document = @procedure.documents.find_by(name: "Constancia de antiguedad")%>
            <% step = @procedure.steps.find_by(name: "#3")%>
            <% if @document.nil? %>
              <p><li> <%= link_to "Cargar constancia de antiguedad.", new_document_path(name: 'Constancia de antiguedad', code: 'CDA', procedure: @procedure, step: '#3' ) %> </li></p>
            <% elsif !step.approved? %>
              <p><li> <%= link_to "Editar constancia de antiguedad.", edit_document_path(@document) %> </li></p>
            <% end %>  
          <% end %>

        </h4>
      </ul>
    </div>
  </div>
</div>