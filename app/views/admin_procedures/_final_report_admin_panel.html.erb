<div class="col-md-6">
  <br>
  <div class="panel panel-primary">
    <div 
      class="panel-heading">Acciones disponibles:
    </div>

    <div class="panel-body">
      <ul>
        <h4>
          <% step = @procedure.steps.find_by(name: "#1")%>
          <% if step.in_progress?%>
            <p> <li> <%= link_to "Aprobar Informe Final", show_document_admin_procedure_path(document_code: 'IF', step: '#1')%> </li></p>
          <% end %>
      
          <% @document = find_document_by_code(@procedure, "CDAP")%>
          <% if @document.nil? %>
          <!--
            <p><li> <%= link_to "Cargar constancia de aprobacón del informe final.", 
                          new_document_path(name: 'Aprobación del Informe Final', code: 'AIF', procedure: @procedure, step: '#2')%> </li></p>
          -->
          <p><li> <%= link_to "Generar constancia de aprobación del informe final.", generate_approval_document_admin_procedure_path(procedure: @procedure, format: :pdf) %> </li></p>               
          <% else %>
            <p><li> <%= link_to "Ver constancia de aprobación.", @document.attachment_url %> </li></p>
            <p><li> <%= link_to "Editar constancia de aprobacón del informe final.", edit_document_path(@document) %> </li></p>
          <% end %>

          <!-- 
          <% @document = find_document_by_code(@procedure, "CDAP")%>
            <% step = @procedure.steps.find_by(name: "#2")%>
            <% unless @document.nil? %>
              <p><li> <%= link_to "Aprobar constancia de aprobación del informe final.",
                show_document_admin_procedure_path(document_code: 'CDAP', step: '#2') %> </li></p>
          <% end %>
          -->
        </h4>
      </ul>
      <br>
      <div class='text-center'>
        <% if @procedure.in_progress? %>
          <%= link_to complete_admin_procedure_path(@procedure) , class: 'btn btn-success btn-lg list' do %>
            <i class="glyphicon glyphicon-cog"></i> Aprobar solicitud
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>