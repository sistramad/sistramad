<div class="well">
  <div>
    <p><strong> <h2 class="text-center">Lista de recaudos requeridos:</h2> </strong></p>
  </div>
  <p><h5 class="text-center">(debe cargar todos los recaudos, en caso contrario su solicitud no podrá ser evaluada).</h5></p>
  <br>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nombre:</th>
          <th>Código:</th>
          <th>Fecha de creación:</th>
          <th>Archivo adjunto:</th>         
        </tr>
      </thead>
      <tbody>
      <% @procedure.documents.order(:name).each do |document|%>
        <tr>
          <td>
            <%= document.name%>
          </td>
          <td>
            <%= document.code %>
          </td>
          <td>
            <%= document.created_at.strftime("%Y-%m-%d") %>
          </td>
          <% if document.attachment_url %>
            <td> 
              <%= link_to document.attachment_url , class: 'btn btn-success btn-xs list' do %>
                <%= document.name %> 
                <i class="glyphicon glyphicon-save-file"></i> 
              <% end %>
              <%= link_to edit_document_path(document) , class: 'btn btn-warning btn-xs list' do %>
                  Editar 
              <% end %>
            </td>
          <% else %>
            <td> 
              <%= link_to edit_document_path(document) , class: 'btn btn-warning btn-xs list' do %>
                <%= document.name %> 
                <i class="glyphicon glyphicon-open-file"></i> 
              <% end %>
            </td>
          <% end %>  
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>